<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tuitions"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/B_marketPlace"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/roundbutton"
                android:layout_gravity="center"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="" />

            <TextView
                android:id="@+id/marketplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Marketplace" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/B_ride"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/ridebutton"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="" />

            <TextView
                android:id="@+id/ride"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:text="Ride" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/B_tutions"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/tutionsbutton"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:text=""
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tutions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Refresh"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/B_foods"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/foodsbutton"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:text=""
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Foods"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/B_my_pro"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/myprofile"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:text=""
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/mp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="My Profile"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/B_sign_out"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/sign_out"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:text=""
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/so"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Sign Out"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <TextView

        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Tuitions"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_tuition"
        app:layoutManager="LinearLayoutManager"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="460dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:text="Sell"
        android:layout_width="83dp"
        android:layout_height="63dp" android:id="@+id/tuition_offer_button"
        android:layout_gravity="right"
        android:src="@android:drawable/ic_input_add" />

</LinearLayout>